---
import BaseLayout from "./BaseLayout.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
    <main>
        <slot />
    </main>
</BaseLayout>

<style>
    main {
        min-height: 100vh;
        display: flex;
        justify-content: center;
    }
</style>